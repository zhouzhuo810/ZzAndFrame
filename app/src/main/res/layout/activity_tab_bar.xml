<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zz="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <zhouzhuo810.me.zzandframe.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/colorPrimary"
        zz:leftImg="@drawable/iv_back"
        zz:leftText="返回"
        zz:showLeftImg="true"
        zz:showRightLayout="true"
        zz:textColorAll="#fff"
        zz:rightText="动画"
        zz:showRightText="true"
        zz:showRightImg="false"
        zz:textSizeTitle="50px"
        zz:textSizeTwoSide="40px"
        zz:titleText="小周工具集合" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd" />

    <zhouzhuo810.me.zzandframe.ui.widget.TabBar
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zz:tb_imageSize="50px"
        zz:tb_markBgColor="@color/colorAccent"
        zz:tb_markTextColor="#fff"
        zz:tb_markTextSize="30px"
        zz:tb_tabCount="FIVE"
        zz:tb_show_img="true"
        zz:tb_show_text="true"
        zz:tb_show_underline="true"
        zz:tb_tabNames="@array/tabNames"
        zz:tb_textColorPress="@color/colorPrimary"
        zz:tb_textSize="36px">

    </zhouzhuo810.me.zzandframe.ui.widget.TabBar>
</LinearLayout>