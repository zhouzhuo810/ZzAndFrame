<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zz="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhouzhuo810.me.zzandframedemo.MainActivity">

    <zhouzhuo810.me.zzandframe.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        zz:textSizeTwoSide="40px"
        zz:textColorAll="#fff"
        zz:textSizeTitle="50px"
        zz:leftText="返回"
        zz:titleText="主页"
        zz:rightText="更多"
        zz:showRightText="true"
        zz:showRightLayout="true"
        android:layout_height="120px"
        >

    </zhouzhuo810.me.zzandframe.ui.widget.TitleBar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
