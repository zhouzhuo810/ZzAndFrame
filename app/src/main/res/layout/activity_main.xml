<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zz="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhouzhuo810.me.zzandframedemo.MainActivity">

    <zhouzhuo810.me.zzandframe.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/colorPrimary"
        zz:ttb_leftImg="@drawable/iv_back"
        zz:ttb_leftText="返回"
        zz:ttb_rightImg="@drawable/ic_qrcode"
        zz:ttb_rightText="更多"
        zz:ttb_showLeftImg="true"
        zz:ttb_showLeftLayout="true"
        zz:ttb_showLeftMarkView="true"
        zz:ttb_showRightMarkView="true"
        zz:ttb_showLeftText="false"
        zz:ttb_showRightImg="true"
        zz:ttb_showRightLayout="true"
        zz:ttb_showRightText="false"
        zz:ttb_textColorAll="#fff"
        zz:ttb_textSizeTitle="50px"
        zz:ttb_textSizeTwoSide="40px"
        zz:ttb_titleText="小周工具集合" />


    <Button
        android:id="@+id/btn_lv"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="50px"
        android:background="@drawable/btn_save_selector"
        android:text="下拉刷新和上拉加载(ListView)"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_rv"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="下拉刷新和上拉加载(RecyclerView)"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_notice"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="通知消息"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="吐司工具"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_mark"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="角标工具"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="TAB工具"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_preview"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="图片预览"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="拍照选图裁剪"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_pager"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="ViewPager指示器"
        android:textColor="#fff"
        android:textSize="40px" />

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:text="对话框"
        android:textColor="#fff"
        android:textSize="40px" />

</LinearLayout>
