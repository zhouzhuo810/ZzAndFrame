<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ll0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ll_bg_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:scaleType="fitXY" />
        <zhouzhuo810.me.zzandframe.ui.widget.MarkView
            android:id="@+id/mv0"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6px"
            android:layout_marginLeft="-6px"
            android:layout_toRightOf="@id/iv0"
            app:mv_bgColor="#ff0000"
            app:mv_markNumber="88"
            app:mv_maxMarkNumber="99"
            app:mv_textColor="#fff"
            app:mv_textSize="34px" />
        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15px"
            android:layout_below="@id/iv0"
            android:layout_marginTop="10px"
            android:text="Tab0"
            android:textColor="#000" />
    </RelativeLayout>

