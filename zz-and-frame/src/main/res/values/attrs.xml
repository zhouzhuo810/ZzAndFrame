<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="showLeftLayout" format="boolean" />
        <attr name="showTitle" format="boolean" />
        <attr name="showRightLayout" format="boolean" />
        <attr name="showLeftImg" format="boolean" />
        <attr name="showLeftText" format="boolean" />
        <attr name="showRightImg" format="boolean" />
        <attr name="showRightText" format="boolean" />
        <attr name="leftImg" format="reference" />
        <attr name="leftText" format="string|reference" />
        <attr name="titleText" format="string|reference" />
        <attr name="rightImg" format="reference" />
        <attr name="rightText" format="string|reference" />
        <attr name="textSizeTitle" format="dimension|reference" />
        <attr name="textSizeTwoSide" format="dimension|reference" />
        <attr name="textColorAll" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="MarkView">
        <attr name="mv_textSize" format="dimension|reference" />
        <attr name="mv_textColor" format="color|reference" />
        <attr name="mv_markNumber" format="integer" />
        <attr name="mv_maxMarkNumber" format="integer" />
        <attr name="mv_bgShape" format="enum">
            <enum name="oval" value="0" />
            <enum name="rect" value="1" />
            <enum name="point" value="2" />
        </attr>
        <attr name="mv_bgColor" format="color|reference" />
        <attr name="mv_point_size" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="TabBar">
        <attr name="tb_showMarkView" format="boolean" />
        <attr name="tb_tabCount" format="enum">
            <enum name="ONE" value="1" />
            <enum name="TWO" value="2" />
            <enum name="THREE" value="3" />
            <enum name="FOUR" value="4" />
            <enum name="FIVE" value="5" />
        </attr>
        <attr name="tb_tabNames" format="reference" />
        <attr name="tb_show_img" format="boolean" />
        <attr name="tb_show_text" format="boolean" />
        <attr name="tb_show_underline" format="boolean" />
        <attr name="tb_textSize" format="dimension|reference" />
        <attr name="tb_imageSize" format="dimension|reference" />
        <attr name="tb_markTextSize" format="dimension|reference" />
        <attr name="tb_markPointSize" format="dimension|reference" />
        <attr name="tb_markTextColor" format="color|reference" />
        <attr name="tb_markBgColor" format="color|reference" />
        <attr name="tb_textColorNormal" format="color|reference" />
        <attr name="tb_textColorPress" format="color|reference" />

    </declare-styleable>


    <declare-styleable name="AutoLayout_Layout">

        <attr name="layout_auto_basewidth">
            <flag name="width" value="1"></flag>
            <flag name="height" value="2"></flag>
            <flag name="textSize" value="4"></flag>
            <flag name="padding" value="8"></flag>
            <flag name="margin" value="16"></flag>
            <flag name="marginLeft" value="32"></flag>
            <flag name="marginTop" value="64"></flag>
            <flag name="marginRight" value="128"></flag>
            <flag name="marginBottom" value="256"></flag>
            <flag name="paddingLeft" value="512"></flag>
            <flag name="paddingTop" value="1024"></flag>
            <flag name="paddingRight" value="2048"></flag>
            <flag name="paddingBottom" value="4096"></flag>
        </attr>

        <attr name="layout_auto_baseheight">
            <flag name="width" value="1"></flag>
            <flag name="height" value="2"></flag>
            <flag name="textSize" value="4"></flag>
            <flag name="padding" value="8"></flag>
            <flag name="margin" value="16"></flag>
            <flag name="marginLeft" value="32"></flag>
            <flag name="marginTop" value="64"></flag>
            <flag name="marginRight" value="128"></flag>
            <flag name="marginBottom" value="256"></flag>
            <flag name="paddingLeft" value="512"></flag>
            <flag name="paddingTop" value="1024"></flag>
            <flag name="paddingRight" value="2048"></flag>
            <flag name="paddingBottom" value="4096"></flag>
            <flag name="minWidth" value="8192"></flag>
            <flag name="maxWidth" value="16384"></flag>
            <flag name="minHeight" value="32768"></flag>
            <flag name="maxHeight" value="65536"></flag>
        </attr>

    </declare-styleable>


    <declare-styleable name="MetroLayout">
        <attr name="metro_divider" format="dimension"></attr>
    </declare-styleable>


    <declare-styleable name="ZzPagerIndicator">
        <attr name="zz_indicator_type" format="enum">
            <enum name="round_point" value="0" />
            <enum name="tab_with_text" value="1" />
            <enum name="tab_with_icon" value="2" />
            <enum name="tab_with_icon_and_text" value="3" />
        </attr>
        <!--for tab-->
        <attr name="zz_unselect_tab_text_size" format="dimension|reference" />
        <attr name="zz_unselect_tab_text_color" format="color|reference" />
        <attr name="zz_select_tab_text_size" format="dimension|reference" />
        <attr name="zz_select_tab_text_color" format="color|reference" />
        <attr name="zz_underline_color" format="color|reference" />
        <attr name="zz_underline_height" format="dimension|reference" />
        <attr name="zz_underline_padding" format="dimension|reference" />
        <attr name="zz_tab_padding" format="dimension|reference" />
        <attr name="zz_tab_icon_size" format="dimension|reference" />
        <attr name="zz_show_underline" format="boolean" />
        <attr name="zz_should_tab_expand" format="boolean" />

        <!--for point-->
        <attr name="zz_select_point_size" format="dimension|reference" />
        <attr name="zz_unselect_point_size" format="dimension|reference" />
        <attr name="zz_select_point_color" format="color|reference" />
        <attr name="zz_unselect_point_color" format="color|reference" />
        <attr name="zz_point_spacing" format="dimension|reference" />

        <attr name="zz_is_need_scale_in_px" format="boolean" />

    </declare-styleable>

</resources>