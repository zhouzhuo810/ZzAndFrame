<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="showLeftLayout" format="boolean" />
        <attr name="showTitle" format="boolean" />
        <attr name="showRightLayout" format="boolean" />
        <attr name="showLeftImg" format="boolean" />
        <attr name="showLeftText" format="boolean" />
        <attr name="showRightImg" format="boolean" />
        <attr name="showRightText" format="boolean" />
        <attr name="leftImg" format="reference" />
        <attr name="leftText" format="string|reference" />
        <attr name="titleText" format="string|reference" />
        <attr name="rightImg" format="reference" />
        <attr name="rightText" format="string|reference" />
        <attr name="textSizeTitle" format="dimension|reference" />
        <attr name="textSizeTwoSide" format="dimension|reference" />
        <attr name="textColorAll" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="MarkView">
        <attr name="mv_textSize" format="dimension|reference" />
        <attr name="mv_textColor" format="color|reference" />
        <attr name="mv_markNumber" format="integer" />
        <attr name="mv_maxMarkNumber" format="integer" />
        <attr name="mv_bgShape" format="enum">
            <enum name="oval" value="0" />
            <enum name="rect" value="1" />
            <enum name="point" value="2" />
        </attr>
        <attr name="mv_bgColor" format="color|reference" />
        <attr name="mv_point_size" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="TabBar">
        <attr name="tb_showMarkView" format="boolean" />
        <attr name="tb_tabCount" format="enum">
            <enum name="ONE" value="1" />
            <enum name="TWO" value="2" />
            <enum name="THREE" value="3" />
            <enum name="FOUR" value="4" />
            <enum name="FIVE" value="5" />
        </attr>
        <attr name="tb_tabNames" format="reference" />
        <attr name="tb_textSize" format="dimension|reference" />
        <attr name="tb_markTextSize" format="dimension|reference" />
        <attr name="tb_markPointSize" format="dimension|reference" />
        <attr name="tb_markTextColor" format="color|reference" />
        <attr name="tb_markBgColor" format="color|reference" />
        <attr name="tb_textColorNormal" format="color|reference" />
        <attr name="tb_textColorPress" format="color|reference" />

    </declare-styleable>
</resources>